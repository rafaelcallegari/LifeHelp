<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_so_o_drip_absurdo"
    android:foregroundGravity="center_horizontal"
    android:gravity="center_horizontal"
    tools:context=".TelaInicial">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="71dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="100dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="100dp"
        android:layout_marginRight="100dp"
        android:fontFamily="@font/chocolate_cookies"
        android:gravity="center"
        android:text="Life Help"
        android:textColor="#FFFFFF"
        android:textSize="40dp" />

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/SlidePager"
        android:layout_width="match_parent"
        android:layout_height="667dp"
        android:layout_alignParentTop="true"
        android:paddingBottom="82dp">

    </androidx.viewpager.widget.ViewPager>

    <LinearLayout
        android:id="@+id/dDotLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="false"
        android:layout_alignParentTop="false"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="false"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="false"
        android:layout_centerVertical="false"
        android:foregroundGravity="center_horizontal"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:padding="20dp"></LinearLayout>

    <ImageButton
        android:id="@+id/voltVoltar"
        android:layout_width="45dp"
        android:layout_height="37dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="41dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="10dp"
        android:background="#00FFFFFF"
        android:paddingBottom="10dp"
        android:scaleType="centerInside"
        android:src="@drawable/setabotaoesquerda"
        android:text="Voltar"
        android:visibility="invisible" />

    <ImageButton
        android:id="@+id/proxProximo"
        android:layout_width="45dp"
        android:layout_height="37dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="41dp"
        android:layout_marginBottom="20dp"
        android:background="#00FFFFFF"
        android:paddingBottom="10dp"
        android:scaleType="centerInside"
        android:src="@drawable/setabotaodireita"
        android:text="proximo" />


</RelativeLayout>